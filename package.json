{
  "name": "casserole",
  "version": "0.0.1",
  "description": "casserole",
  "main": "index.js",
  "scripts": {
    "test": "nyc _mocha test/unit test/int",
    "test:unit": "nyc _mocha test/unit",
    "test:int": "nyc _mocha test/int",
    "test:watch": "nodemon -w src/ -w test/ -x nyc _mocha --bail -- test/unit test/int",
    "test:coverage": "nyc _mocha test/unit test/int && nyc report -r html && nyc check-coverage",
    "watch": "nodemon -w src/ -w test/ -x",
    "docker:cass": "cd test/fixture/docker; docker-compose up -d",
    "docker:cass:logs": "cd test/fixture/docker; docker-compose logs --tail 100 -f",
    "docker:cass:down": "cd test/fixture/docker; docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deployable/casserole.git"
  },
  "keywords": [
    "casserole"
  ],
  "author": "Matt Hoyle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deployable/casserole/issues"
  },
  "homepage": "https://github.com/deployable/casserole#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "benchmark": "^2.1.4",
    "chai": "^4.1.2",
    "eslint": "^4.7.1",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "cassandra-driver": "^3.3.0"
  }
}
