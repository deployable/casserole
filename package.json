{
  "name": "casserole",
  "version": "0.1.0-0",
  "description": "Cassandra JS Object Mapper. Build models and queries from JS objects. (WIP)",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha test/unit test/int",
    "test:unit": "mocha test/unit",
    "test:int": "mocha test/int",
    "test:watch": "nodemon -w src/ -w test/ -x mocha --bail -- test/unit test/int",
    "test:lint": "eslint src/ test/",
    "test:coverage": "nyc _mocha test/unit test/int && nyc report -r html && nyc check-coverage",
    "build": "set -uex; yarn run build:code; yarn run build:doc",
    "build:code": "babel -d lib/ src/",
    "build:doc": "set -uex; yarn run build:doc:html; yarn run build:doc:md",
    "build:doc:html": "jsdoc -c .jsdoc.json -d doc/html src/",
    "build:doc:md": "jsdoc2md -c ./.jsdoc.json --separators -f src/* > doc/API.md",
    "watch": "nodemon -w src/ -w test/ -x",
    "docker:cass": "cd test/fixture/docker; docker-compose up -d",
    "docker:cass:logs": "cd test/fixture/docker; docker-compose logs --tail 100 -f",
    "docker:cass:down": "cd test/fixture/docker; docker-compose down",
    "build:js": "babel -d lib/ src/",
    "release:test": "set -uex; yarn test; npm version prerelease; npm publish --access public --tag testing",
    "release:patch": "set -uex; git pull; rm -rf node_modules; yarn; yarn run test:coverage; yarn run test:lint; yarn run build:doc; npm version patch; git push; npm publish --access public; git push --tags"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhio/casserole.git"
  },
  "keywords": [
    "casserole",
    "cassandra",
    "orm",
    "model"
  ],
  "author": "Matt Hoyle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mhio/casserole/issues"
  },
  "homepage": "https://github.com/mhio/casserole#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "benchmark": "^2.1.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.7.1",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.0.5",
    "nyc": "^11.2.1",
    "source-map-support": "^0.5.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "cassandra-driver": "^3.3.0",
    "lodash": "^4.17.5",
    "pluralize": "^7.0.0"
  },
  "nyc": {
    "per-file": true,
    "lines": 90,
    "statements": 90,
    "functions": 80,
    "branches": 76
  }
}
